<h3> Courriel et mot de passe</h3>

<%= simple_form_for(resource, :url => users_path, :method => :put ) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <label class="control-label"><h5>Adresse courriel</h5>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.email_field :email, :class => 'input-xlarge' %>
          </div>
        </div>
      </label>
    </div>

    <div class="control-group">
      <label class="control-label"><h5>Mot de passe actuel</h5>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :current_password, :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Vous devez écrire votre mot de passe actuel pour confirmer le changement", :class => 'input-xlarge', :autocomplete => 'off'%><br />
          </div>
        </div>
      </label>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>En attente de la confirmation du courriel: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="control-group">
      <label class="control-label"><h5>Nouveau mot de passe</h5>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :password, :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Laissez vide si vous ne voulez pas le changer", :class => 'input-xlarge', :autocomplete => 'off' %>
          </div>
        </div>
      </label>
    </div>

    <div class="control-group">
      <label class="control-label"><h5>Confirmation du nouveau mot de passe</h5>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :password_confirmation, :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Laissez vide si vous ne voulez pas le changer", :class => 'input-xlarge', :autocomplete => 'off'%>
          </div>
        </div>
      </label>
    </div>

    <div class="form-actions">
      <%= f.submit "Enregistrer", :class => 'btn btn-primary' %>
    </div>
<% end %>

<script>
    $(document).ready(function(){
        $('#user_password').tooltip();
        $('#user_password_confirmation').tooltip();
        $('#user_current_password').tooltip();
    });
</script>

