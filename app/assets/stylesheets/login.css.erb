.gradient { position: fixed; top: 0; left: 0; height: 400px; width: 100%; z-index: 0; background-image: -webkit-linear-gradient(top, #fdf0d5, #fffbf4); background-image: -moz-linear-gradient(top, #fdf0d5, #fffbf4); background-image: -ms-linear-gradient(top, #fdf0d5, #fffbf4); background-image: linear-gradient(top, #fdf0d5, #fffbf4); filter: progid:DXImageTransform.Microsoft.gradient(StartColorStr="#fdf0d5", EndColorStr="#fffbf4"); }

.login-page { position: absolute; top: 50%; left: 50%; width: 1000px; margin-left: -500px; height: 400px; margin-top: -200px; }
.login-page form { margin: 0; }
.login-left { display: table-cell; width: 500px; background: url(<%= image_path "logo-site.png" %>) center center no-repeat; height: 400px; border-right: 1px dotted #AB710A; }
.login-right { display: table-cell; box-sizing: border-box; width: 500px; padding: 25px; height: 400px; vertical-align: middle; }