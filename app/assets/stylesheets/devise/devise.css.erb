/*
  Place all the styles related to the matching controller here.
  They will automatically be included in application.css.
*/

.devise-page { position: absolute; top: 50%; left: 50%; width: 1000px; margin-left: -500px; height: 400px; margin-top: -200px; }
.devise-page form { margin: 0 0 12px 0; }
.devise-left { display: table-cell; width: 500px; background: url(<%= image_path 'logo-site.png' %>) center center no-repeat; height: 400px; border-right: 1px dotted #AB710A; }
.devise-right { display: table-cell; box-sizing: border-box; width: 500px; padding: 25px; height: 400px; vertical-align: middle; }

.devise-links { font-size: 12px; }

#error_explanation {
  padding: 8px 35px 8px 14px;
  margin-bottom: 20px;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
  border: 1px solid #eed3d7;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  background-color: #f2dede;
  color: #8A2003;
}

#error_explanation h2 { font-size: 16px; font-weight: 700; line-height: 100%; margin-bottom: 10px; }

.field_with_errors { display: inline-block; }
.field_with_errors .message { font-size: 12px; color: #8A2003; }