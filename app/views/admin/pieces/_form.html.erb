<h5>Ajouter ou modifier une pièce</h5>
<div class="col">
    <%= simple_form_for [:admin, @piece] do |f| %>

        <div class="input-prepend">
            <span class="add-on"><i class="iconic-hash"></i></span>
            <%= f.text_field :id, :class => 'input-small', :readonly => true%>
        </div>
        <br />

        <div class="input-prepend">
            <span class="add-on"><i class="icon-font"></i></span>
            <%= f.text_field :title, :placeholder => 'Titre de la pièce', :class => 'input-xlarge' %>
        </div>
        <br />

        <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
            <%= f.association :composer, :label => false, :prompt => 'Choisissez le compositeur', :input_html => { :class => 'input-xlarge'}, :wrapper => false %>
        </div>
        <br />

      <div class="form-actions">
        <%= f.button :submit, 'Enregistrer' , :class => 'btn btn-primary' %>
      </div>
    <% end %>
</div>