/* General (body, html) */
html {
    background-color: #fffbf4;
}

body {
    background-color: #fffbf4;
    background: -webkit-linear-gradient(top, #fdf0d5 0px, #fffbf4 400px);
    background: -moz-linear-gradient(top, #fdf0d5 0px, #fffbf4 400px);
    background: -o-linear-gradient(top, #fdf0d5 0px, #fffbf4 400px);
    background: -ms-linear-gradient(top, #fdf0d5 0px, #fffbf4 400px);
    background: linear-gradient(top, #fdf0d5 0px, #fffbf4 400px);
    filter: progid:DXImageTransform.Microsoft.gradient(StartColorStr="#fdf0d5", EndColorStr="#fffbf4");
}

/* General (body, html) */
.wrapper { margin: 20px; position: relative; }

.section { background: #fff; box-shadow: 1px 3px 8px rgba(0,0,0,0.2); margin-bottom: 16px; padding: 20px; -moz-box-sizing: border-box; box-sizing: border-box; }
.section-page { min-width: 1000px; }
.section-subpage { margin-left:245px; min-width: 755px; }
.section-submenu { position: absolute; width:225px; }

.footer { text-align: center; font-size: 10px; padding-bottom: 14px; clear: both; }

.navbar .brand { background: url(<%= image_path 'small-logo.png' %>) left center no-repeat; width: 80px; height: 40px; padding: 0; margin: 0; content: ''; }

/* Sub-navigation */
.section-submenu h4 { margin: 0 0 10px 0; padding: 0; }
.section-submenu ul { margin: 0 -20px; list-style: none; }
.section-submenu li { padding: 5px 0; line-height: 18px; }
.section-submenu li:hover {
  color: #fff;
  font-weight: 600;
  text-decoration: none;
  background-color: #0081c2;
  background-image: -moz-linear-gradient(top,#EBAA37, #AB710A);
  background-image: -webkit-gradient(linear,0 0,0 100%,from(#EBAA37),to(#AB710A));
  background-image: -webkit-linear-gradient(top, #EBAA37, #AB710A);
  background-image: -o-linear-gradient(top, #EBAA37, #AB710A);
  background-image: linear-gradient(to bottom, #EBAA37, #AB710A);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFEBAA37',endColorstr='#FFAB710A',GradientType=0);
}
.section-submenu li.active {
    color: #fff;
  font-weight: 600;
    text-decoration: none;
    background-color: #0081c2;
    background-image: -moz-linear-gradient(top,#aa0911, #8a2003);
    background-image: -webkit-gradient(linear,0 0,0 100%,from(#aa0911),to(#8a2003));
    background-image: -webkit-linear-gradient(top,#aa0911, #8a2003);
    background-image: -o-linear-gradient(top,#aa0911, #8a2003);
    background-image: linear-gradient(to bottom,#aa0911, #8a2003);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffaa0911',endColorstr='#ff8a2003',GradientType=0);
}
.section-submenu li:hover > a, .section-submenu li.active > a { color: #fff; text-decoration: none; }
.section-submenu li a { padding: 0 20px; display: inline-block; }
.section-submenu li.divider {
    height: 1px;
    margin: 5px 1px;
    padding: 0;
    overflow: hidden;
    background: #e5e5e5;
    border-bottom: 1px solid #fff;
}

/* JavaScript functions */
.fcms-message {
    position: fixed;
    top: 50px;
    max-width: 80%;
    text-align: left;
    -moz-box-shadow: 0 1px 2px rgba(0,0,0,0.3), inset 0 0 0 #000;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.3), inset 0 0 0 #000;
    box-shadow: 0 1px 2px rgba(0,0,0,0.3), inset 0 0 0 #000;
}

/* DataTables images */
table.dataTable:not(.table-clear) thead .sorting {
  background-image: url(<%= image_path 'sort_both.png' %>);
  background-repeat: no-repeat;
  background-position: center right;
}
table.dataTable thead .sorting_asc {
    background-image: url(<%= image_path 'sort_asc.png' %>);
    background-repeat: no-repeat;
    background-position: center right;
}
table.dataTable thead .sorting_desc {
    background-image: url(<%= image_path 'sort_desc.png' %>);
    background-repeat: no-repeat;
    background-position: center right;
}


