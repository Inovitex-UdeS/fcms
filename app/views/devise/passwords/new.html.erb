<div class="gradient"></div>

<div class="devise-page">
    <div class="devise-left"></div>
    <div class="devise-right">
        <h2>Mot de passe perdu?</h2>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.email_field :email, :autofocus => true, :placeholder => 'exemple@xyz.com', :class => 'input-xlarge' %><br />

          <div><%= f.submit "Envoyer les instructions", :class => 'btn btn-primary' %></div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>