<div class="gradient"></div>

<div class="devise-page">
  <div class="devise-left"></div>
  <div class="devise-right">
    <h2>Modifiez votre mot de passe</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, :placeholder => "Nouveau mot de passe", :autofocus => true %></br>

      <%= f.password_field :password_confirmation, :placeholder => "Confirmation du mot de passe" %>

      <div><%= f.submit "Envoyer" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
