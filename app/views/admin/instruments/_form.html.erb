<div id="formModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Ajouter ou modifier un instrument</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for [:admin, @instrument], :remote => true, :validate=>true do |f| %>
        <div class="control-group">
          <label class="control-label"><h5>Num√©ro</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="iconic-hash"></i></span>
                <%= f.text_field :id, :class => 'input-small', :disabled => true%>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Instrument</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-font"></i></span>
                <%= f.text_field :name, :class => 'input-xlarge' %>
              </div>
            </div>
          </label>
        </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn" data-dismiss="modal">Fermer</button>
          <%= f.button :submit, 'Enregistrer', :id =>'formSave' , :class => 'btn btn-primary' %>
        </div>
    <% end %>
</div>
