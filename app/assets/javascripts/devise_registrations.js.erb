function verticallyCenter() {
  // Vertically-center the page div
  var page = $('.devise-page');
  page.css({
    'padding-top': Math.max(($('body').height() - page.height()) / 2, 0) + "px"
  });
}

$(document).ready(function() {
    // Update the layout
    verticallyCenter();
    $(window).resize(verticallyCenter);

    // Initialize the datepicker
    $('#user_birthday').datepicker({
        format: 'yyyy-mm-dd',
        viewMode: 2
    });

    // Change recaptcha styling
    $('img#recaptcha_reload').attr('src', '<%= image_path 'recaptcha/refresh.png' %>');
    $('img#recaptcha_switch_audio').attr('src', '<%= image_path 'recaptcha/audio.png' %>');
    $('img#recaptcha_switch_img').attr('src', '<%= image_path 'recaptcha/text.png' %>');
    $('img#recaptcha_whatsthis').attr('src', '<%= image_path 'recaptcha/help.png' %>');
    $('#recaptcha_response_field').css('border', '');
});