<div id="formModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Ajouter ou modifier un utilisateur</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for [:admin, @user] do |f| %>
        <div class="control-group">
          <label class="control-label"><h5>Numéro</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="iconic-hash"></i></span>
                <%= f.text_field :id, :class => 'input-small', :disabled => true%>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Prénom</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <%= f.text_field :first_name, :class => 'input-xlarge' %>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Nom de famille</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <%= f.text_field :last_name, :class => 'input-xlarge' %>
              </div>
            </div>
          </label>
        </div>


        <div class="control-group">
          <label class="control-label"><h5>Sexe</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <%= f.select :gender, options_for_select([['Masculin', true], ['Féminin', false]]), {:class => 'input-xlarge select'}%>
              </div>
            </div>
          </label>
        </div>


        <div class="control-group">
          <label class="control-label"><h5>Date de fête</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-calendar"></i></span>
                <%= f.text_field :birthday, :class => 'input-medium', :'data-mask' => '9999-99-99' %><br />
              </div>
            </div>
          </label>
        </div>

        <%= render :partial => 'shared/contactinfos', :locals => {:f => f} %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn" data-dismiss="modal">Fermer</button>
          <%= f.button :submit, 'Enregistrer', :id =>'formSave' , :class => 'btn btn-primary' %>
        </div>
    <% end %>
    </div>
