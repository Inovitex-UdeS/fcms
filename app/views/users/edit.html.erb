<h3>Page de profil</h3>

<%= simple_form_for(@user) do |f| %>

        <div class="control-group">
          <label class="control-label"><b>Prénom</b></label>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-font"></i></span>
              <%= f.text_field :first_name, wrapper: false, :class => 'input-xlarge', :placeholder => "Prénom" %>
            </div>
            <br />
          </div>
        </div>


      <div class="control-group">
        <label class="control-label"><b>Nom de famille</b></label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-font"></i></span>
            <%= f.text_field :last_name, :class => 'input-xlarge', :placeholder => "Nom de famille" %>
          </div>
          <br />
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><b>Choisissez votre sexe</b></label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.select :gender, options_for_select([['Masculin', true], ['Féminin', false]]), {:prompt => 'Choisissez votre sexe', :selected => @user.gender}, {:class => 'input-xlarge'}%>
          </div>
          <br />
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><b>Date de naissance</b></label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-calendar"></i></span>
            <%= f.text_field :birthday, :class => 'input-xlarge', :placeholder => "Date de naissance", :'data-mask' => '9999-99-99' %>
          </div>
          <br />
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><b>Choisissez une institution scolaire</b></label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-home"></i></span>
            <%= f.association :school, prompt: "Choisissez une institution scolaire", wrapper: false, label: false, :input_html => {:class => "input-xlarge"} %>
          </div>
          <br />
        </div>
      </div>

        <%= render :partial => 'shared/contactinfos', :locals=>{:f => f} %>

        <div class="form-actions">
            <%= f.submit "Enregistrer", class: "btn btn-primary" %>
        </div>
<% end %>
