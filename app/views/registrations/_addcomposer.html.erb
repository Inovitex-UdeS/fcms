<div id="addNewComposer" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addNewComposerLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Ajouter un nouveau compositeur</h3>
  </div>

    <div class="modal-body">
      <%= simple_form_for @composer, :remote => true do |f| %>
          <p>ATTENTION: Le nom du compostieur doit être composé par son nom de famille, suivi de ses initales (En lettres majuscules) Exemple: BACH J.S. </p>
          <div class="input-prepend">
            <span class="add-on"><i class="icon-pencil"></i></span>
            <%= f.text_field :name, :autofocus => true, :placeholder => 'Nom du compositeur', :class => 'input-xlarge' %>
          </div>
      <% end %>
    </div>

    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Fermer</button>
      <input class="button btn btn-primary" name="commit" type="submit" value="Enregistrer" onclick="AddNewComposer(); return false;">
    </div>
</div>
