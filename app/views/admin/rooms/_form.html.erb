<h5>Ajouter ou modifier un local</h5>
<div class="col">
  <%= simple_form_for [:admin, @room] do |f| %>
      <div class="input-prepend">
        <span class="add-on"><i class="iconic-hash"></i></span>
        <%= f.text_field :id, :class => 'input-small', :disabled => true%>
      </div>
      <br />

      <div class="input-prepend">
        <span class="add-on"><i class="iconic-hash"></i></span>
        <%= f.text_field :capacity, :autofocus => true, :placeholder => 'CapacitÃ©', :class => 'input-small' %>
      </div>
      <br />

      <div class="input-prepend">
        <span class="add-on"><i class="icon-font"></i></span>
        <%= f.text_field :name, :placeholder => 'Nom du local', :class => 'input-xlarge' %>
      </div>
      <br />

      <div class="input-prepend">
        <span class="add-on"><i class="icon-map-marker"></i></span>
        <%= f.text_field :location, :placeholder => 'Localtion', :class => 'input-xlarge' %>
      </div>
      <br />

      <div class="input-prepend">
        <span class="add-on"><i class="icon-font"></i></span>
        <%= f.text_field :description, :placeholder => 'Description du local', :class => 'input-xlarge' %>
      </div>
      <br />
      <div class="form-actions">
        <%= f.button :submit, 'Enregistrer' , :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>