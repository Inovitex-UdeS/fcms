<div class="gradient"></div>

<div class="devise-page">
  <div class="devise-left">
  </div>
  <div class="devise-right">
    <h2>Enregistrement</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>
        <%= f.email_field :email, :autofocus => true, :placeholder => 'exemple@xyz.com', :class => 'input-xlarge' %>
        <%= f.password_field :password, :placeholder => 'Mot de passe', :class => 'input-xlarge' %>
        <%= f.password_field :password_confirmation, :placeholder => 'Confirmez votre mot de passe', :class => 'input-xlarge'  %><br />
        <%= f.submit "S'enregister", :class => 'btn btn-primary' %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>