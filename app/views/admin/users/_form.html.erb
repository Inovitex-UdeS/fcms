<h5>Ajouter ou modifier un utilisateur</h5>

<%= simple_form_for [:admin, @user] do |f| %>

    <div class="input-prepend">
      <span class="add-on"><i class="iconic-hash"></i></span>
      <%= f.text_field :id, :class => 'input-small', :readonly => true%>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
      <%= f.text_field :first_name, :autofocus => true, :placeholder => 'Prénom', :class => 'input-xlarge' %>
    </div>
    <br />
    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
      <%= f.text_field :last_name, :placeholder => 'Nom', :class => 'input-xlarge' %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
      <%= f.select :gender, options_for_select([['Masculin', true], ['Féminin', false]]), {:prompt => 'Choisissez votre sexe'}, {:class => 'input-xlarge select'}%>
    </div>
    <br />


    <div class="input-prepend">
      <span class="add-on"><i class="icon-calendar"></i></span>
      <%= f.text_field :birthday, :placeholder => 'Date de naissance', :class => 'input-medium', :'data-mask' => '9999-99-99' %><br />
    </div>
    <br />

    <%= render :partial => 'shared/contactinfos', :locals => {:f => f} %>
    </br>

    <div class="form-actions">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
<% end %>
