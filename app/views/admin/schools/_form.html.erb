<div id="formModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Ajouter ou modifier une institution scolaire</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for [:admin, @school] do |f| %>
        <div class="control-group">
          <label class="control-label"><h5>Numéro</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="iconic-hash"></i></span>
                <%= f.text_field :id, :class => 'input-small', :disabled => true%>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Nom de l'institution scolaire</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-font"></i></span>
                <%= f.text_field :name, :class => 'input-xlarge' %>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Type d'école</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-tag"></i></span>
                <%= f.association :schooltype, :label => false, :input_html => { :class => 'input-xlarge'}, :wrapper => false %>
              </div>
            </div>
          </label>
        </div>

        <div class="control-group">
          <label class="control-label"><h5>Commission scolaire</h5>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-bell"></i></span>
                <%= f.association :schoolboard, :label => false, :input_html => { :class => 'input-xlarge'}, :wrapper => false %>
              </div>
            </div>
          </label>
        </div>

        <%= render :partial => 'shared/contactinfos', :locals => {:f => f} %>

  </div>

  <div class="modal-footer">
    <button type="button" class="btn" data-dismiss="modal">Fermer</button>
    <%= f.button :submit, 'Enregistrer', :id =>'formSave' , :class => 'btn btn-primary' %>
  </div>
    <% end %>
</div>