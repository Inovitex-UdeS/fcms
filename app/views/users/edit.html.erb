<h3>Page de profil</h3>

<%= simple_form_for(@user) do |f| %>

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
        <%= f.text_field :first_name, :class => 'input-xlarge', :placeholder => "Prénom" %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
        <%= f.text_field :last_name, :class => 'input-xlarge', :placeholder => "Nom de famille" %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
        <%= f.select :gender,[['Masculin', true], ['Féminin', false]], { :prompt => 'Choisissez votre sexe'}, {:class => 'input-xlarge'}%>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-gift"></i></span>
        <%= f.text_field :birthday, :class => 'input-xlarge', :placeholder => "Date de naissance", :'data-mask' => '9999-99-99' %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-lock"></i></span>
      <%= f.association :school, prompt: "Choisissez une institution scolaire", wrapper: false, label: false, :input_html => {:class => "input-xlarge"} %>
    </div>
    <br />

    <%= render :partial => 'shared/contactinfos', :locals=>{:f => f} %>

    <div class="form-actions">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
<% end %>
