<% content_for(:head) do%>
     <%=stylesheet_link_tag 'devise'%>
<%end%>

<div class="gradient"></div>

<div class="devise-page">
    <div class="devise-left">
    </div>
    <div class="devise-right">
        <h2>Connexion</h2>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

            <%= f.email_field :email, :autofocus => true, :placeholder => 'exemple@xyz.com', :class => 'input-xlarge' %><br />
            <%= f.password_field :password, :placeholder => 'Mot de passe', :class => 'input-xlarge' %><br />

            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me, :class => 'checkbox inline' %>
                <%= f.label :remember_me, "Rester connecter", :class => 'checkbox inline' %><br />
            <% end -%>

            <%= f.submit "Se connecter", :class => 'btn btn-primary' %>
            <%= f.button "Créer un compte", :class => 'btn' %>

        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>

