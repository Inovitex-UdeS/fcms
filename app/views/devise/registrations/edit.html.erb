<h2> Courriel et mot de passe</h2>

<%= simple_form_for(resource, :url => users_path, :method => :put ) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email, "Courriel" %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, :class => 'input-xlarge', :autofocus => true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de la confirmation du courriel: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :password, "Nouveau mot de passe" %>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-lock"></i></span>
    <%= f.password_field :password, :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Laissez vide si vous ne voulez pas le changer", :class => 'input-xlarge', :autocomplete => "off" %>
  </div>

  <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe" %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-lock"></i></span>
  <%= f.password_field :password_confirmation, :'data-trigger' => 'click', :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Laissez vide si vous ne voulez pas le changer", :class => 'input-xlarge' %>
  </div>

  <%= f.label :current_password, "Mot de passe présent" %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-lock"></i></span>
  <%= f.password_field :current_password, :'data-toggle' => 'tooltip', :'data-animation' => true,  :'data-original-title' => "Vous devez écrire votre mot de passe présent pour confirmer le changement", :class => 'input-xlarge' %><br />
  </div>
  <br />
  <%= f.submit "Enregistrer", :class => 'btn btn-primary' %>
<% end %>

<script>
    $(document).ready(function(){
        $('#user_password').tooltip();
        $('#user_password_confirmation').tooltip();
        $('#user_current_password').tooltip();
    });
</script>

