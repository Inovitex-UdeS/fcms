<% if object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        Le formulaire contient <%= pluralize(object.errors.count, "erreur") %>
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>