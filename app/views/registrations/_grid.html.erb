<h5>INSCRIPTIONS AU FESTIVAL</h5>
<table class="table table-striped table-bordered">
  <tr>
    <th>Participant</th>
    <th>Pièce</th>
    <th>Compositeur</th>
    <th>École</th>
    <th>Professeur</th>
    <th>Année de l'édition</th>
    <th>Catégorie</th>
    <th>Durée</th>
    <th>Date de création</th>
    <th>Dernière mise à jour</th>
  </tr>
  <% @registrations.each do |reg| %>
        <% reg.performances.each do |performance| %>
          <tr>
            <td><%= User.find(reg.user_owner_id).first_name %> <%= User.find(reg.user_owner_id).last_name %></td>
            <td><%= Piece.find(performance.piece_id).title %></td>
            <td><%= Composer.find(Piece.find(performance.piece_id).composer_id).name %></td>
            <td><%= School.find(reg.school_id).name %></td>
            <td><%= User.find(reg.user_teacher_id).first_name %> <%= User.find(reg.user_teacher_id).last_name %></td>
            <td><%= Edition.find(reg.edition_id).year %></td>
            <td><%= Category.find(reg.category_id).name %></td>
            <td><%= reg.duration %> min.</td>
            <td><%= reg.created_at %></td>
            <td><%= reg.updated_at %></td>
          </tr>
        <% end %>
  <% end %>
</table>